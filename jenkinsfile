pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
                echo 'checkout action is done'
            }
        }
        stage('Build') {
            steps {
                echo 'build action is done'
            }
        }
        stage('Test') {
            steps {
                echo 'test action is done'
                sh xyz
            }
        }
        stage('Deploy') {
            steps {
                echo 'deploy action is done'
            }
        }
    }
}
